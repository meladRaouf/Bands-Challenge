<?xml version="1.0" encoding="utf-8"?>
<net.wemakesites.em.bandschallenge.features.common.ErrorView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:gravity="center_horizontal"
        android:text="@string/error_message"
        android:textSize="@dimen/text_body" />

    <Button
        android:id="@+id/button_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_default"
        android:gravity="center"
        android:text="@string/error_reload" />


</net.wemakesites.em.bandschallenge.features.common.ErrorView>